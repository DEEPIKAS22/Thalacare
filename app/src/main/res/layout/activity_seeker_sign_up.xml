<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SeekerSignUp"
    android:orientation="vertical"
    android:background="@drawable/bg"
    android:padding="20dp">

    <TextView
        android:id="@+id/SignupSeekerPage"
        android:layout_width="367dp"
        android:layout_height="54dp"
        android:gravity="center"
        android:text="REQUESTER SIGN UP"
        android:textAlignment="center"
        android:textColor="#050000"
        android:textSize="30sp" />

    <ImageView
        android:layout_marginTop="10dp"
        android:id="@+id/seekersignup"
        android:layout_width="307dp"
        android:layout_height="172dp"
        android:layout_gravity="center"
        android:src="@drawable/thala" />

    <TextView
        android:id="@+id/SignupSeekertext"
        android:layout_width="346dp"
        android:layout_height="54dp"
        android:text="WELCOME!"
        android:gravity="left"
        android:textColor="#050000"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/SignupSeekertext1"
        android:layout_width="343dp"
        android:layout_height="28dp"
        android:text="SignUp to start."
        android:textColor="#050000"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        android:layout_gravity="center">

        <EditText
            android:id="@+id/editTextSignupSeek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Fullname" />

        <EditText
            android:id="@+id/editTextSignupSeekId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Username" />

        <EditText
            android:id="@+id/editTextSignupSeekMailId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:hint="EmailId" />

        <EditText
            android:id="@+id/editTextSignupSeekPhoneNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPhonetic"
            android:hint="Phone No." />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:textColorHint="#B9B8B8"
            app:passwordToggleEnabled="true">

            <EditText
                android:id="@+id/editTextSignupSeekPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPassword"
                android:hint="Password" />

        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:id="@+id/bloodGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Blood Group:"
            android:textColor="#050000" />
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner1" />

        <TextView
            android:id="@+id/Gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gender:"
            android:textColor="#050000" />

        <RadioGroup
            android:layout_width="333dp"
            android:layout_height="60dp"
            android:layout_marginEnd="290dp"
            android:layout_marginRight="290dp"
            android:layout_marginBottom="0dp">

            <RadioButton
                android:id="@+id/SeekerMale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Male"
                android:checked="true"
                android:textColor="#050000" />

            <RadioButton
                android:id="@+id/SeekerFemale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Female"
                android:checked="false"
                android:textColor="#050000" />

        </RadioGroup>

        <Button
            android:id="@+id/SeekerGo"
            android:layout_width="246dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="#4a16b9"
            android:elevation="0dp"
            android:text="GO"
            android:textColor="#FFFFFF" />


    </LinearLayout>

</LinearLayout>