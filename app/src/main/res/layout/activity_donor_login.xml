<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DonorLogin"
    android:orientation="vertical"
    android:background="@drawable/bgthalacare2"
    android:padding="20dp">

    <TextView
        android:id="@+id/AdminLoginPage"
        android:layout_width="377dp"
        android:layout_height="58dp"
        android:layout_gravity="center"
        android:text="Donor"
        android:textAlignment="center"
        android:textColor="#050000"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/donorlogin"
        android:layout_width="280dp"
        android:layout_height="232dp"
        android:layout_gravity="center"
        android:src="@drawable/donor" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:foregroundGravity="center"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Hello there, welcome back!"
        android:textColor="#050000"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="353dp"
        android:layout_height="227dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editTextDonor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Email"
            android:inputType="textPersonName"
            android:textColor="#050000" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:textColorHint="#B9B8B8"
            app:passwordToggleEnabled="true">



            <EditText
                android:id="@+id/editTextPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/Dlog"
            android:layout_width="246dp"
            android:layout_height="34dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="#4a16b9"
            android:elevation="0dp"
            android:text="Done"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/SignUpDonorButton"
            android:layout_width="262dp"
            android:layout_height="34dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="#4a16b9"
            android:elevation="0dp"
            android:text="New user? Sign Up!"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/Dfor"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:elevation="0dp"
            android:text="forget password?"
            android:textColor="#050000" />
    </LinearLayout>


    <ProgressBar
        android:id="@+id/progressBarDonorL"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible" />

</LinearLayout>